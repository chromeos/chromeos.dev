<!--{#
  Renders preview examples of components

  @param {object} component - Current component from global components listing
  @param {object[]} examples - Examples of the component to output
  @param {string} examples[].title - Title describing the example
  @param {object} examples[].arguments - Arguments to pass into the example
  @param {boolean} examples[].useMaxWidth - Indicates if the wrapper will have a max width on desktop like viewports.
  @param {object} microcopy - Microcopy
 #}-->

{% macro componentPreview(filename, component, examples, microcopy) %} {% import filename as importedMacro %} {% set componentMacro = importedMacro[component.macro] %} {% for example in examples %} {% set args = example.arguments %}
<article class="component-preview">
  <h3 class="type--h4">{{example.title}}</h3>
  <details class="component-preview__args">
    <summary>{{microcopy.styleGuide.args}}</summary>
    <dl>
      {% for arg, settings in args %}
      <dt>{{arg}}</dt>
      <dd>{% highlight "js" %}{{ settings | dump(2) | safe }}{% endhighlight %}</dd>
      {% endfor %}
    </dl>
  </details>
  {# Sadly need to brute-force this because because we can't spread the array items into the macro #}
  <div class="component-preview__container{{ ' component-preview--desktop-max-width' if example.useMaxWidth }}">{% set compArgs = args | previewArguments(component.arguments) %} {% set argsLength = compArgs | length %} {{ componentMacro(compArgs[0]) if argsLength == 1}} {{ componentMacro(compArgs[0], compArgs[1]) if argsLength == 2}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2]) if argsLength == 3}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3]) if argsLength == 4}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3], compArgs[4]) if argsLength == 5}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3], compArgs[4], compArgs[5]) if argsLength == 6}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3], compArgs[4], compArgs[5], compArgs[6]) if argsLength == 7}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3], compArgs[4], compArgs[5], compArgs[6], compArgs[7]) if argsLength == 8}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3], compArgs[4], compArgs[5], compArgs[6], compArgs[7], compArgs[8]) if argsLength == 9}} {{ componentMacro(compArgs[0], compArgs[1], compArgs[2], compArgs[3], compArgs[4], compArgs[5], compArgs[6], compArgs[7], compArgs[8], compArgs[9]) if argsLength == 10}}</div>
</article>
{% endfor %} {% endmacro %}
