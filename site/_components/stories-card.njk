<!--{#
  Renders a clickable card.

  Arguments:
    @param {object} item: Object to populate the stories card with
    @param {string} item.image: Stories Card image.
    @param {string} item.alt (optional): Stories Card alt text.
    @param {string} item.title: Stories Card title.  
    @param {string} item.cta.url: Stories Card URL.
    @param {string} item.cta.text: Stories Card cta text.
 #}-->
{% from 'icon.njk' import icon %} {% macro storiesCard(id, item) %}
<a href="{{ item.cta.url }}" class="stories-card" aria-labelledby="sct{{id}}">
  <article class="stories-card__container">
    <img class="stories-card__image" src="{{item.image}}" alt="{{item.alt}}" />
    <div class="stories-card__content">
      <header id="sct{{id}}" class="stories-card__header">
        <h2 class="stories-card__title type--h4">{{item.title}}</h2>
      </header>

      <footer class="stories-card__footer">
        <span class="cta cta--link cta--right-icon" aria-hidden="true">{{ item.cta.text }}{{ icon('arrow-forward') }}</span>
      </footer>
    </div>
  </article>
</a>
{%- endmacro %}
