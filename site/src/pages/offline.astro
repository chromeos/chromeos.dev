---
import { microcopy } from '$lib/sanity';
import Offline from '$components/Offline.svelte';
import Wrapper from '$layouts/wrapper.astro';

const offline = Object.values(microcopy).map((item) => ({
  locale: item.locale.code,
  ...item.network.offline,
}));

const locale = microcopy.en.locale;
---

<Wrapper locale={locale} metadesc="" title="ChromeOS.dev">
  <div class="ow">
    <Offline offline={offline} client:load />
  </div>
</Wrapper>

<style>
  :global(.main):has(.ow) {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ow {
    flex-grow: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 1rem;
    padding: 2rem 1rem;
    max-width: 60ch;
    text-align: center;
    min-height: 50dvh;
  }
</style>
